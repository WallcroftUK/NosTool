<Window x:Class="NosTool.Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NosTool.Tool"
        mc:Ignorable="d"
        Title="NosTool" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Shops">
                <DataGrid Name="ShopsDataGrid" ItemsSource="{Binding Shops}" AutoGenerateColumns="True"/>
            </TabItem>
            <!-- Other tabs... -->
        </TabControl>

        <!-- Button to trigger debug logs -->
        <Button Content="Show Debug Logs" Click="ShowDebugLogs_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
